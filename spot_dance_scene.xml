<!-- spot_dance_scene.xml -->

<mujoco model="spot_dance">
    <compiler angle="degree" coordinate="local"/>
    <option gravity="0 0 -9.81"/>

    <worldbody>
        <!-- Ground plane -->
        <geom name="floor" type="plane" size="5 5 0.1" rgba="0.8 0.8 0.8 1"/>

        <!-- Spot Robot -->
        <body name="spot" pos="0 0 0.4">
            <freejoint/>
            <geom type="capsule" size="0.1 0.3" rgba="1 1 0 1"/> <!-- Simplified body -->
            
            <!-- Front Left Leg -->
            <body name="front_left_leg" pos="0.2 0.15 0">
                <joint name="front_left_hip" type="hinge" axis="0 1 0" pos="0 0 0"/>
                <geom type="capsule" size="0.04 0.2" pos="0 0 -0.2" rgba="1 0 0 1"/>
                <body name="front_left_knee" pos="0 0 -0.4">
                    <joint name="front_left_knee" type="hinge" axis="0 1 0" pos="0 0 0"/>
                    <geom type="capsule" size="0.03 0.2" pos="0 0 -0.2" rgba="1 0.5 0.5 1"/>
                </body>
            </body>

            <!-- Front Right Leg -->
            <body name="front_right_leg" pos="0.2 -0.15 0">
                <joint name="front_right_hip" type="hinge" axis="0 1 0" pos="0 0 0"/>
                <geom type="capsule" size="0.04 0.2" pos="0 0 -0.2" rgba="0 1 0 1"/>
                <body name="front_right_knee" pos="0 0 -0.4">
                    <joint name="front_right_knee" type="hinge" axis="0 1 0" pos="0 0 0"/>
                    <geom type="capsule" size="0.03 0.2" pos="0 0 -0.2" rgba="0.5 1 0.5 1"/>
                </body>
            </body>

            <!-- Back Left Leg -->
            <body name="back_left_leg" pos="-0.2 0.15 0">
                <joint name="back_left_hip" type="hinge" axis="0 1 0" pos="0 0 0"/>
                <geom type="capsule" size="0.04 0.2" pos="0 0 -0.2" rgba="0 0 1 1"/>
                <body name="back_left_knee" pos="0 0 -0.4">
                    <joint name="back_left_knee" type="hinge" axis="0 1 0" pos="0 0 0"/>
                    <geom type="capsule" size="0.03 0.2" pos="0 0 -0.2" rgba="0.5 0.5 1 1"/>
                </body>
            </body>

            <!-- Back Right Leg -->
            <body name="back_right_leg" pos="-0.2 -0.15 0">
                <joint name="back_right_hip" type="hinge" axis="0 1 0" pos="0 0 0"/>
                <geom type="capsule" size="0.04 0.2" pos="0 0 -0.2" rgba="1 0 1 1"/>
                <body name="back_right_knee" pos="0 0 -0.4">
                    <joint name="back_right_knee" type="hinge" axis="0 1 0" pos="0 0 0"/>
                    <geom type="capsule" size="0.03 0.2" pos="0 0 -0.2" rgba="1 0.5 1 1"/>
                </body>
            </body>
        </body>
    </worldbody>
</mujoco>
