<mujoco model="spot_dance">
    <compiler angle="degree" coordinate="local"/>
    <option gravity="0 0 -9.81"/>

    <worldbody>
        <geom name="floor" type="plane" size="5 5 0.1" rgba="0.8 0.8 0.8 1"/>

        <body name="spot" pos="0 0 0.4">
            <freejoint/>
            <geom type="capsule" size="0.1 0.3" mass="5.0" rgba="1 1 0 1" pos="0 0 0"/>

            <!-- Front Left Leg -->
            <body name="front_left_leg" pos="0.25 0.15 0">
                <joint name="front_left_abad" type="hinge" axis="1 0 0" pos="0 0 0"/>
                <geom type="capsule" size="0.03 0.05" mass="0.2" rgba="0.8 0.2 0.2 1" pos="0 0 -0.025"/>
                <body name="front_left_hip" pos="0 0 -0.05">
                    <joint name="front_left_hip" type="hinge" axis="0 1 0" pos="0 0 0"/>
                    <geom type="capsule" size="0.03 0.1" mass="0.3" rgba="1 0 0 1" pos="0 0 -0.1"/>
                    <body name="front_left_knee" pos="0 0 -0.2">
                        <joint name="front_left_knee" type="hinge" axis="0 1 0" pos="0 0 0"/>
                        <geom type="capsule" size="0.02 0.1" mass="0.2" rgba="1 0.5 0.5 1" pos="0 0 -0.1"/>
                    </body>
                </body>
            </body>

            <!-- Front Right Leg -->
            <body name="front_right_leg" pos="0.25 -0.15 0">
                <joint name="front_right_abad" type="hinge" axis="1 0 0" pos="0 0 0"/>
                <geom type="capsule" size="0.03 0.05" mass="0.2" rgba="0.2 0.8 0.2 1" pos="0 0 -0.025"/>
                <body name="front_right_hip" pos="0 0 -0.05">
                    <joint name="front_right_hip" type="hinge" axis="0 1 0" pos="0 0 0"/>
                    <geom type="capsule" size="0.03 0.1" mass="0.3" rgba="0 1 0 1" pos="0 0 -0.1"/>
                    <body name="front_right_knee" pos="0 0 -0.2">
                        <joint name="front_right_knee" type="hinge" axis="0 1 0" pos="0 0 0"/>
                        <geom type="capsule" size="0.02 0.1" mass="0.2" rgba="0.5 1 0.5 1" pos="0 0 -0.1"/>
                    </body>
                </body>
            </body>

            <!-- Back Left Leg -->
            <body name="back_left_leg" pos="-0.25 0.15 0">
                <joint name="back_left_abad" type="hinge" axis="1 0 0" pos="0 0 0"/>
                <geom type="capsule" size="0.03 0.05" mass="0.2" rgba="0.2 0.2 0.8 1" pos="0 0 -0.025"/>
                <body name="back_left_hip" pos="0 0 -0.05">
                    <joint name="back_left_hip" type="hinge" axis="0 1 0" pos="0 0 0"/>
                    <geom type="capsule" size="0.03 0.1" mass="0.3" rgba="0 0 1 1" pos="0 0 -0.1"/>
                    <body name="back_left_knee" pos="0 0 -0.2">
                        <joint name="back_left_knee" type="hinge" axis="0 1 0" pos="0 0 0"/>
                        <geom type="capsule" size="0.02 0.1" mass="0.2" rgba="0.5 0.5 1 1" pos="0 0 -0.1"/>
                    </body>
                </body>
            </body>

            <!-- Back Right Leg -->
            <body name="back_right_leg" pos="-0.25 -0.15 0">
                <joint name="back_right_abad" type="hinge" axis="1 0 0" pos="0 0 0"/>
                <geom type="capsule" size="0.03 0.05" mass="0.2" rgba="0.8 0.2 0.8 1" pos="0 0 -0.025"/>
                <body name="back_right_hip" pos="0 0 -0.05">
                    <joint name="back_right_hip" type="hinge" axis="0 1 0" pos="0 0 0"/>
                    <geom type="capsule" size="0.03 0.1" mass="0.3" rgba="1 0 1 1" pos="0 0 -0.1"/>
                    <body name="back_right_knee" pos="0 0 -0.2">
                        <joint name="back_right_knee" type="hinge" axis="0 1 0" pos="0 0 0"/>
                        <geom type="capsule" size="0.02 0.1" mass="0.2" rgba="1 0.5 1 1" pos="0 0 -0.1"/>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <!-- 12 Motors: 3 per leg -->
        <motor joint="front_left_abad"   ctrlrange="-1 1" gear="100"/>
        <motor joint="front_left_hip"    ctrlrange="-1 1" gear="100"/>
        <motor joint="front_left_knee"   ctrlrange="-1 1" gear="100"/>

        <motor joint="front_right_abad"  ctrlrange="-1 1" gear="100"/>
        <motor joint="front_right_hip"   ctrlrange="-1 1" gear="100"/>
        <motor joint="front_right_knee"  ctrlrange="-1 1" gear="100"/>

        <motor joint="back_left_abad"    ctrlrange="-1 1" gear="100"/>
        <motor joint="back_left_hip"     ctrlrange="-1 1" gear="100"/>
        <motor joint="back_left_knee"    ctrlrange="-1 1" gear="100"/>

        <motor joint="back_right_abad"   ctrlrange="-1 1" gear="100"/>
        <motor joint="back_right_hip"    ctrlrange="-1 1" gear="100"/>
        <motor joint="back_right_knee"   ctrlrange="-1 1" gear="100"/>
    </actuator>
</mujoco>

